    <script>
        // Datos de los goleadores
	const topScorers = [
            { nombre: "Juan Tovar", goles: 32 },
            { nombre: "Jose Gemelo", goles: 29 },
            { nombre: "Juan Carlos", goles: 28 },
            { nombre: "Juan López", goles: 27 },
            { nombre: "Pedro Gemelo", goles: 16 },
            { nombre: "Floris", goles: 16 },
            { nombre: "Juanma", goles: 14 },
            { nombre: "Puro", goles: 13 },
            { nombre: "Ortega", goles: 12 },
            { nombre: "Catrasto", goles: 9 },
            { nombre: "Maño", goles: 5 },
            { nombre: "Jose Ángel", goles: 4 },
            { nombre: "Clarico", goles: 3 },
            { nombre: "Pedrín", goles: 3 },
            { nombre: "Villegas", goles: 3 },
            { nombre: "Jesús Maldonado", goles: 2 },
            { nombre: "Carlos Gámez", goles: 2 },
            { nombre: "Mateo Maldonado", goles: 2 },
            // Agrega más goleadores aquí
        ];
		// Seleccionar el cuerpo de la tabla
        const tableBody = document.querySelector("#scorers-table tbody");

        // Llenar la tabla dinámicamente
        topScorers.forEach(jugador => {
            const row = document.createElement("tr");
            row.innerHTML = `
                <td>${jugador.nombre}</td>
                <td>${jugador.goles}</td>
            `;
            tableBody.appendChild(row);
        });
    </script>
